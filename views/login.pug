extends header.pug

block content
    div(class="ui" style="text-align:center;")
        h1(class="bottomheader2" style="font-family: 'Noto Sans KR', sans-serif;") 로그인

    input(type="hidden" value=feedback class="feedback")
    form(class="ui form form1" style="font-size:1.3rem;" action="./login_process" method="post")
        div(class="field")
            label 아이디
            input(type="text" name="id" placeholder="사용자 ID를 입력해주세요." required)
        div(class="field")
            label 비밀번호
            input(type="password" name="pwd" placeholder="비밀번호를 입력해주세요." required)
        button(class="ui button but" type="submit") login

    script. 
        const feedback = document.querySelector('.feedback');
        if (feedback.value)
            alert(feedback.value);